.tab
	position: relative;


.tab__content
	display: none
	height 200px
	border: 2px solid clr-grey
	// border-radius: brdr-radius
	overflow: overlay


.tab__description
	padding: 10px
	overflow: hidden


#toggle-1:checked~.tab__content,
#toggle-2:checked~.tab__content,
#toggle-3:checked~.tab__content
	display: block




.tab input
	position: absolute
	top: 0
	opacity: 0
